                <VBox alignment="CENTER" spacing="10">
                    <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="GYM ARNOCO" />
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #6b7280; -fx-font-weight: bold;" text="OFFICIAL BOOKING RECEIPT" />
                    <Label fx:id="receiptDateLabel" style="-fx-font-size: 12px; -fx-text-fill: #9ca3af;" text="Dec 02, 2024 14:30:45" />
                </VBox>

                <Separator style="-fx-background-color: #e5e7eb;" />

                <!-- Booking ID & Status -->
                <VBox spacing="15">
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #6b7280; -fx-min-width: 150;" text="Booking ID:" />
                        <Label fx:id="bookingIdLabel" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="GYM-123456789" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #6b7280; -fx-min-width: 150;" text="Status:" />
                        <Label fx:id="statusLabel" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #10b981;                                       -fx-background-color: #ecfdf5; -fx-padding: 5 15; -fx-background-radius: 5;" text="CONFIRMED" />
                    </HBox>
                </VBox>

                <Separator style="-fx-background-color: #e5e7eb;" />

                <!-- Customer Information -->
                <VBox spacing="12">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #374151;" text="CUSTOMER INFORMATION" />

                    <HBox spacing="15">
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #6b7280; -fx-min-width: 150;" text="Name:" />
                        <Label fx:id="customerNameLabel" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #1f2937;" text="Juan Dela Cruz" />
                    </HBox>

                    <HBox spacing="15">
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #6b7280; -fx-min-width: 150;" text="Phone Number:" />
                        <Label fx:id="customerPhoneLabel" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #1f2937;" text="09123456789" />
                    </HBox>

                    <HBox spacing="15">
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #6b7280; -fx-min-width: 150;" text="Email:" />
                        <Label fx:id="customerEmailLabel" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #1f2937;" text="juan@email.com" />
                    </HBox>
                </VBox>

                <Separator style="-fx-background-color: #e5e7eb;" />

                <!-- Booking Details -->
                <VBox spacing="12">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #374151;" text="BOOKING DETAILS" />

                    <HBox spacing="15">
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #6b7280; -fx-min-width: 150;" text="Sport:" />
                        <Label fx:id="sportNameLabel" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #1f2937;" text="BASKETBALL" />
                    </HBox>

                    <HBox spacing="15">
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #6b7280; -fx-min-width: 150;" text="Court:" />
                        <Label fx:id="courtNameLabel" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #1f2937;" text="Court 1 (Indoor)" />
                    </HBox>

                    <HBox spacing="15">
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #6b7280; -fx-min-width: 150;" text="Date:" />
                        <Label fx:id="bookingDateLabel" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #1f2937;" text="Monday, December 02, 2024" />
                    </HBox>

                    <HBox spacing="15">
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #6b7280; -fx-min-width: 150;" text="Time Slot:" />
                        <Label fx:id="timeSlotLabel" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #1f2937;" text="10:00 - 12:00" />
                    </HBox>
                </VBox>

                <Separator style="-fx-background-color: #e5e7eb;" />

                <!-- Payment Details -->
                <VBox spacing="12">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #374151;" text="PAYMENT SUMMARY" />

                    <HBox spacing="15">
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #6b7280; -fx-min-width: 150;" text="Rate (per hour):" />
                        <Label fx:id="pricePerHourLabel" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #2563eb;" text="â‚± 250.00" />
                    </HBox>

                    <Separator style="-fx-background-color: #e5e7eb;" />

                    <HBox spacing="15" style="-fx-padding: 15; -fx-background-color: #f0fdf4; -fx-background-radius: 8;">
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #166534; -fx-font-weight: bold; -fx-min-width: 150;" text="TOTAL AMOUNT:" />
                        <Label fx:id="totalPriceLabel" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #16a34a;" text="â‚± 500.00" />
                    </HBox>
                </VBox>

                <Separator style="-fx-background-color: #e5e7eb;" />

                <Button fx:id="doneButton" onAction="#handleDone" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-padding: 15 35;                                -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14px;" text="âœ“ DONE" />
                <Button fx:id="printButton" onAction="#handlePrintReceipt" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-padding: 15 35;                                -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14px;" text="ðŸ–¨ PRINT RECEIPT" />

            </VBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="20" />

        </VBox>
