            <VBox fx:id="receiptContainer" maxWidth="700" spacing="25" style="-fx-padding: 50; -fx-background-color: white; -fx-background-radius: 20;                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3);">

