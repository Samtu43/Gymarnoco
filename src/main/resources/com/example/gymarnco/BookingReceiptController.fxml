<AnchorPane prefHeight="901.0" prefWidth="1600" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gymarnco.BookingReceiptController">

    <!-- ScrollPane wraps all content -->
    <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="940.0" prefWidth="1600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER" spacing="40" style="-fx-padding: 20;">

